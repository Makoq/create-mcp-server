{
  "compilerOptions": {
    <% if (transport==='Server-Sent Events (SSE)') { %>
      "target": "es6",
      "module": "commonjs",
    <% } %>
    <% if (transport==='Standard Input/Output (stdio)') { %>
      "target":  "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",
    <% } %>
    "strict": true,
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
